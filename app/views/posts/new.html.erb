<%= video_tag("/videos/bgclouds.mp4", autoplay:true, loop: true, controls: false, :class => "bgvid") %>
<%= form_for @post do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title, class: 'mb0 field-light' %><br />
	<%= f.label :location %>:
  <%= f.text_field :location, class: 'mb0 field-light' %><br />
  <%= f.label :description %>:
  <%= f.text_field :description, class: 'mb0 field-light' %><br />
 	<%= f.label :avatar %><br />
  <%= f.file_field :avatar %>
  <%= f.submit class: 'button button-outline button-med white' %>
<% end %>